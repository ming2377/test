<assembly 
		xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>resources</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
	    <file>
	      <source>resourceProperties/config/app.properties</source>
	      <outputDirectory>config</outputDirectory>
	      <destName>app.properties</destName>
	      <filtered>true</filtered>
	    </file>
    </files>
    <fileSets>
    	<fileSet>
    		<directory>resourceProperties/messages</directory>
    		<outputDirectory>messages</outputDirectory>
    	</fileSet>
    	<fileSet>
    		<directory>resourceProperties/templates</directory>
    		<outputDirectory>templates</outputDirectory>
    	</fileSet>
    	<fileSet>
    		<directory>resourceProperties/images</directory>
    		<outputDirectory>images</outputDirectory>
    	</fileSet>
    </fileSets>
</assembly>